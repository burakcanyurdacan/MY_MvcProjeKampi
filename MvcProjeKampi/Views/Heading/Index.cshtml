@using EL.Concrate
@model List<Heading>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Başlıklar</h3>
        </div>
        <div class="card-body p-0">
            <table class="table table-bordered table-striped projects">
                <thead>
                    <tr class="text-center">
                        <th>#</th>
                        <th>Başlık</th>
                        <th>Oluşturan</th>
                        <th>Kategori</th>
                        <th style="width:20%">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HeadingId</td>
                            <td>
                                <a>@item.HeadingName</a>
                                <br />
                                <small>@item.HeadingDate.ToShortDateString()</small>
                            </td>
                            <td class="project-state">
                                <ul class="list-inline">
                                    <li class="list-inline-item">
                                        <img alt="Avatar" class="table-avatar" src="~/Tema/dist/img/avatar.png">
                                    </li>
                                </ul>
                            </td>
                            <td class="project-state">
                                <span class="badge badge-success">@item.Category.CategoryName</span>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="#">
                                    <i class="fas fa-folder">
                                    </i>
                                    Yazılar
                                </a>
                                <a class="btn btn-info btn-sm" href="#">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a class="btn btn-danger btn-sm" href="#">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
<hr />
<div class="content pb-3">
    <a href="~/Heading/AddHeading" class="btn btn-info">Yeni Başlık Ekle</a>
</div>